            "book_image": ""
        },
        {
            "speaker_id": [
                "100042_01"
            ],
            "speaker_name": "迦道夫",
            "context": "（即使心存芥蒂，\\n也必须要遵守这里的规矩，\\n对那些问题视而不见……）",
            "voice_line": "VO_CHR_KNIGHTSSTORY_100042_02_02_0062",
