    "story_content": [
        {
            "speaker_id": [
                "110366_03",
                "210145_01",
                "100001_09"
            ],
            "speaker_name": "全员",
            "context": "哈啊啊啊啊啊啊啊啊！",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "呃啊啊啊啊！\\n竟然对妈妈动手……\\n真是坏孩子！",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "坏孩子坏孩子坏孩子坏孩子坏孩子！\\n妈妈这么爱你们！\\n你们为什么就是不懂呢！？",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "人类都是小婴儿，\\n只要依赖妈妈，听妈妈的话就好！\\n然而你们！你们你们你们却……",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "你们这群蛆虫！\\n竟敢忤逆妈妈！",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "100002_01"
            ],
            "speaker_name": "埃尔菲莉丝",
            "context": "她看上去不对劲啊！",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "我……妈妈我……\\n不……“吾”……",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "吾乃德谬哥……\\n森罗万象之真理。",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_01"
            ],
            "speaker_name": "加百列",
            "context": "德谬哥……那是封印在\\n另一个我体内的恶魔……",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "吾之法典所载规矩，\\n人类必须遵从。",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "100005_05"
            ],
            "speaker_name": "沙音",
            "context": "你说是你的规矩？",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "人性本恶。抢夺与杀戮之尽头\\n始有生也。忽视此真理，\\n隐藏欲望实乃滑稽之至。",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "既然如此，吾将亲自指引\\n汝等忘却原本生存方式的\\n可悲人类。",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "汝，遵从吾之法典，自邻里处掠夺吧。\\n汝，遵从吾之法典，杀死邻里之人吧。",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "然后向吾摇尾乞怜、奉献信仰吧。\\n唯吾方能以真理引导众生。",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "110366_03"
            ],
            "speaker_name": "皮诺",
            "context": "我们是互相扶持生存下来的。\\n就像身为龙的加百列\\n养育了我一样。",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_01"
            ],
            "speaker_name": "加百列",
            "context": "人类也许确实会产生争执，\\n但因为这样就把恶行\\n正当化的规矩肯定是错的！",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "110366_03"
            ],
            "speaker_name": "皮诺",
            "context": "我不允许你恣意\\n将歪理强加于人，\\n扰乱世间的秩序！",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "要提出异议，拒绝吾之引导吗？\\n无法接受真理的蛆虫啊。\\n唯有以吾之法典，对汝等施以惩戒。",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "——以“吾”之手将你们赶尽杀绝。\\n——“妈妈”来把你们都杀掉。",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "210145_02"
            ],
            "speaker_name": "堕天使加百列",
            "context": "全都给我惨死吧！",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [
                "100001_09"
            ],
            "speaker_name": "尤蒂尔",
            "context": "她要来了！\\n所有人做好准备！",
            "voice_line": "",
            "book_image": ""
        }
    ]
}