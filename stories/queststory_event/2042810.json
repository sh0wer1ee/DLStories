            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "伊莉雅",
            "context": "我们怎么能让世界\\n就此终结呢！",
            "voice_line": "VO_CHR_EVENTSTORY_20423_10_0051",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "伊莉雅",
