    "story_content": [
        {
            "speaker_id": [],
            "speaker_name": "telop",
            "context": "\\n“克拉贝·罗埃伦”\\n最深处\\n \\n ",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "呜呃……嗷噢噢噢……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0001",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "尤蒂尔",
            "context": "普鲁托……不，阿尔贝琉斯……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0002",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "我的子孙啊……快……快将我……\\n打倒吧……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0003",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "在我的身心\\n被魔神之力吞噬之前……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0004",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "库菈乌",
            "context": "不！为什么要说那样的话！\\n你可是阿尔贝琉斯陛下啊！",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0005",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "库菈乌",
            "context": "永远充满自信，不在意别人的担心，\\n轻而易举地完成任何事。",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0006",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "库菈乌",
            "context": "那不正是你……\\n阿尔贝琉斯陛下吗！",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0007",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "难道是……库菈乌？\\n是库菈乌吗？",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0008",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "库菈乌",
            "context": "陛下！？还认得我吗？",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0009",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "你变得如此出色了啊……库菈乌……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0010",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "库菈乌",
            "context": "谢、谢谢……\\n但我并不是为了这样的重逢\\n才苦等了300年！",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0011",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "对不起，但请你谅解。\\n要是不处理掉被魔神侵蚀的我，\\n将会带来灾难……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0012",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "库菈乌",
            "context": "这、这……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0013",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "躯体的消亡并不代表我的逝去。\\n讨伐魔神……向往和平的意志\\n要是消失了，才是我真正的死亡。",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0014",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "库菈乌……希望你能理解……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0015",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "尤蒂尔",
            "context": "……",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "尤蒂尔",
            "context": "好吧……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0016",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "库菈乌",
            "context": "尤蒂尔！？",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0017",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "尤蒂尔",
            "context": "阿尔贝琉斯。就算你的身体消亡，\\n你的意志也会由我继承。",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0018",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "尤蒂尔",
            "context": "你为人们带来的希望\\n绝对不会消失！",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0019",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "尤蒂尔……\\n原来你就是……“龙光继承者”……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0020",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "我真幸福……能在最后找到\\n值得托付我的意志……我的希望之人……",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0021",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "阿尔贝琉斯",
            "context": "来吧，继承了我的血脉与意志之人！\\n超越我吧！",
            "voice_line": "VO_CHR_INGAMESTORY_10_06_0022",
            "book_image": ""
        }
    ]
