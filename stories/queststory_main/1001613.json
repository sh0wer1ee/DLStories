            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "塞西娅",
            "context": "哥哥……",
            "voice_line": "",
            "book_image": ""
        },
        {
            "speaker_id": [],
            "speaker_name": "巴尔库斯",
            "context": "我和你一起走。\\n但你别太得意了……",
            "voice_line": "",
            "book_image": ""
